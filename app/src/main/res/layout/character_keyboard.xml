<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightGrey"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_q"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:hapticFeedbackEnabled="true"
            android:backgroundTint="@color/pureWhite"
            android:text="q" />

        <Button
            android:id="@+id/button_w"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"

            android:backgroundTint="@color/pureWhite"
            android:text="w" />

        <Button
            android:id="@+id/button_e"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:backgroundTint="@color/pureWhite"
            android:text="e" />

        <Button
            android:id="@+id/button_r"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:backgroundTint="@color/pureWhite"
            android:text="r" />

        <Button
            android:id="@+id/button_t"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:backgroundTint="@color/pureWhite"

            android:text="t" />

        <Button
            android:id="@+id/button_y"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:backgroundTint="@color/pureWhite"

            android:text="y" />

        <Button
            android:id="@+id/button_u"
            android:layout_width="0dp"
            android:backgroundTint="@color/pureWhite"

            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="u" />

        <Button
            android:id="@+id/button_i"
            android:layout_width="0dp"
            android:backgroundTint="@color/pureWhite"

            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="i" />

        <Button
            android:id="@+id/button_o"
            android:layout_width="0dp"
            android:backgroundTint="@color/pureWhite"

            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="o" />

        <Button
            android:id="@+id/button_p"
            android:layout_width="0dp"
            android:backgroundTint="@color/pureWhite"

            android:layout_height="@dimen/key_height"
            android:layout_weight="1"
            android:text="p" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:backgroundTint="@color/pureWhite"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:backgroundTint="@color/pureWhite"

            android:layout_weight="0.5" />


        <Button
            android:id="@+id/button_a"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:backgroundTint="@color/pureWhite"

            android:layout_weight="1"
            android:text="a" />

        <Button
            android:id="@+id/button_s"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:backgroundTint="@color/pureWhite"

            android:layout_weight="1"
            android:text="s" />

        <Button
            android:id="@+id/button_d"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:backgroundTint="@color/pureWhite"

            android:layout_weight="1"
            android:text="d" />

        <Button
            android:id="@+id/button_f"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:backgroundTint="@color/pureWhite"

            android:layout_weight="1"
            android:text="f" />

        <Button
            android:id="@+id/button_g"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:backgroundTint="@color/pureWhite"

            android:layout_weight="1"
            android:text="g" />

        <Button
            android:id="@+id/button_h"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:backgroundTint="@color/pureWhite"

            android:layout_weight="1"
            android:text="h" />

        <Button
            android:id="@+id/button_j"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:backgroundTint="@color/pureWhite"

            android:layout_weight="1"
            android:text="j" />

        <Button
            android:id="@+id/button_k"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:backgroundTint="@color/pureWhite"

            android:layout_weight="1"
            android:text="k" />

        <Button
            android:id="@+id/button_l"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:backgroundTint="@color/pureWhite"

            android:layout_weight="1"
            android:text="l" />


        <Button
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:backgroundTint="@color/pureWhite"

            android:layout_weight="0.5"
            android:text="a" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/button_CAP"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:backgroundTint="@color/pureWhite"

            android:layout_weight="1.5"
            android:textSize="16dp"
            android:text="&#8963;" />

        <Button
            android:id="@+id/button_z"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:backgroundTint="@color/pureWhite"

            android:layout_weight="1"
            android:text="z" />

        <Button
            android:id="@+id/button_x"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:backgroundTint="@color/pureWhite"

            android:layout_weight="1"
            android:text="x" />

        <Button
            android:id="@+id/button_c"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:backgroundTint="@color/pureWhite"

            android:layout_weight="1"
            android:text="c" />

        <Button
            android:id="@+id/button_v"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:backgroundTint="@color/pureWhite"

            android:layout_weight="1"
            android:text="v" />

        <Button
            android:id="@+id/button_b"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:backgroundTint="@color/pureWhite"

            android:layout_weight="1"
            android:text="b" />

        <Button
            android:id="@+id/button_n"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:backgroundTint="@color/pureWhite"

            android:layout_weight="1"
            android:text="n" />

        <Button
            android:id="@+id/button_m"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"

            android:backgroundTint="@color/pureWhite"

            android:layout_weight="1"
            android:text="m" />



        <Button
            android:id="@+id/button_del"
            android:layout_width="0dp"
            android:layout_height="@dimen/key_height"
            android:backgroundTint="@color/pureWhite"

            android:layout_weight="1.5"
            android:textSize="16dp"
            android:text="&#8249;" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:weightSum="10"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button_space"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:backgroundTint="@color/pureWhite"

            android:text="space" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:visibility="invisible" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>